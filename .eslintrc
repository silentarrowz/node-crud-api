{
	"extends": "hardcore-react",
	"parser": "babel-eslint",

	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",

		"rules": {
			"quotes": [2, "single", "avoid-escape"],
			"eqeqeq": 0,
			
			"eol-last": 0,
			"no-nested-ternary": 1,
			"padded-blocks": [1, "never"],
			"space-after-function-name": [1, "never"],
			"space-before-blocks": [1, "always"]
		}
	}
}
